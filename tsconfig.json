{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "noEmitOnError": false,
    "noImplicitThis": true,
    "outDir": "build",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types",
      "typings/"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "manifest"
  ]
}